@page "/counter"

<PageTitle>Counter</PageTitle>

<div>
    <h2 class="Lexend-400">Generate new order</h2>
</div>
<hr />



<div class="row justify-content-between mx-0 mb-5">
    <div class="col-sm-12 col-md-12 col-lg-4 mb-4 mt-4 px-3 text-center">
